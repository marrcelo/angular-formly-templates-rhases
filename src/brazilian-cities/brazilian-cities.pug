.brazilian-cities.text-center
  .form-horizontal
    .form-inline
      .form-group
        label(for="state") Estado&nbsp;
        select.form-control(name="state" ng-options="state.label for state in states track by state.cod" ng-model="infos.state" ng-change="onSelectState()")
          option(value="" disabled hidden)
            | Selecione o seu estado
        |&nbsp;&nbsp;

      .form-group
        label(for="city") Cidade&nbsp;
        select.form-control(name="city" ng-options="city.label for city in infos.state.cities track by city.cod" ng-model="infos.city" ng-change="onSelectCity()")
          option(value="")
            | Selecione a sua cidade
        |&nbsp;&nbsp;
        
