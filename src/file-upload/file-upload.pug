.form-group.file-upload
  input.form-control(type="text" placeholder="{{ fileName }}" 
  ng-disabled="uploadStatus == 'processing'" ngf-select="vm.upload($file)" 
  ng-model="s3UrlFilePath" ga-event-action s3-file-upload 
  s3-sign-request-uri="options.templateOptions.signRequestUri" 
  s3-file-name-prefix="options.templateOptions.fileNamePrefix" 
  s3-bucket="options.templateOptions.bucket" 
  s3-upload-status="uploadStatus" s3-file-url="model[options.key]" ng-required="to.required" 
  s3-on-started="onStarted(uploadedFile)" s3-on-success="onSuccess(uploadedFile)")
  //- span(ng-hide="fileName") Escolher
  //- span(ng-show="fileName")  {{ fileName }}
  span.upload-feedback
    i.fa.fa-circle-o-notch.fa-spin(ng-show="uploadStatus == 'processing'")
    i.fa.fa-check.success(ng-show="uploadStatus == 'success'")
    i.fa.fa-times.success(ng-show="uploadStatus == 'failed'")
