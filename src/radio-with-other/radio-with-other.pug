label.control-label {{ to.label }}

.radio-group
    div(ng-repeat='(key, option) in to.options' ng-class='{ "radio": !to.inline, "radio-inline": to.inline }')
        label
            input(type='radio'
                id='{{id + "_" + $index}}'
                tabindex='0'
                ng-value='option[to.valueProp ||  "value"]'
                ng-change="toogleOffOther()"
                ng-model='model[options.key]')
            span {{ option[to.labelProp || 'name'] }}

    div(ng-class='{ "radio": !to.inline, "radio-inline": to.inline }')
        label
            input(type='radio'
                id='other'
                tabindex='20'
                ng-value='true'
                ng-model='isOtherEnabled' ng-change="toogleOnOther()")
            span {{ to.otherLabel || 'Outro:' }} &nbsp;
            input(type="textng" ng-model='model[options.key]' ng-if='isOtherEnabled' required="true" placeholder="{{to.otherPlaceholder}}")
